## need to install sqlite3.dll in the libs directory to avoid
## having to add extraneous directories to the Windows PATH 

test -d inst/libs || mkdir inst/libs
cp src/windows/sqlite3.dll inst/libs
cp src/windows/sqlite3.h src      ## need the header file here

## build the libsqlite3.a library
cd ./src/windows
dlltool --dllname sqlite3.dll --def sqlite3.def --output-lib libsqlite3.a -k

